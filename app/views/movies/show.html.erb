<h1 style="text-decoration:underline">Movie Details</h1>
<h3><%= @movie.format_title %></h3>
<%= link_to "Update Movie", "/movies/#{@movie.id}/edit" %>
<%= link_to "Delete Movie", "/movies/#{@movie.id}", method: :delete %>
<p>Released: <%= @movie.released %></p>
<p>Rating: <%= @movie.rating %></p>
<p>Sex: <%= @movie.sex %></p>
<p>Nudity: <%= @movie.nudity %></p>
<p>Violence: <%= @movie.violence %></p>