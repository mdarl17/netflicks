<h1><%= "Edit #{@movie.title}" %></h1>
<%= form_with url: "/movies/#{@movie.id}", data: { turbo: false }, method: :patch, local: true do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title, value: @movie.title %>
  <%= f.label "Released" %>
  <%= f.text_field :released, value: @movie.released %>
  <%= f.label "Rating" %>
  <%= f.text_field :rating, value: @movie.rating %>
  <%= f.label "Sex" %>
  <%= f.text_field :sex, value: @movie.sex %>
  <%= f.label "Nudity" %>
  <%= f.text_field :nudity, value: @movie.nudity %>
  <%= f.label "Violence" %>
  <%= f.text_field :violence, value: @movie.violence %>
  <%= f.submit "Update Movie" %>
<% end %>